@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Student Name</th>
            <th>Gender</th>
            <th>Age</th>
            <th>Standard</th>
            <th>Father's Name</th>
        </tr>
    </thead>
    <tbody id="studentTable"></tbody>
</table>

<script>
    document.addEventListener("DOMContentLoaded", FetchStudentData);

    function FetchStudentData(){
        const jwtToken = localStorage.getItem('token'); // Ensure valid token is stored

        fetch('https://localhost:7098/api/Students', {
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${jwtToken}`,
                'Content-Type': 'application/json'
            }
        })
        .then(response => {
            console.log('Response Status:', response.status);
            if (!response.ok) {
                throw new Error(`HTTP Error: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log('Fetched Data:', data); // Debugging API response

            const table = document.getElementById('studentTable');
            table.innerHTML = ''; // Clear existing table rows

            if (!Array.isArray(data)) {
                throw new Error('Invalid API response format');
            }

            data.forEach(student => {
                const row = `<tr>
                    <td>${student.id}</td>
                    <td>${student.studentName}</td>
                    <td>${student.studentGender}</td>
                    <td>${student.age}</td>
                    <td>${student.standard}</td>
                    <td>${student.fatherName}</td>
                </tr>`;
                table.innerHTML += row;
            });
        })
        .catch(error => {
            console.error('Error fetching student data:', error);
           
        });
    }
</script>
